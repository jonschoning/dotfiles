[user]
    name = Jon Schoning
    email = jonschoning@gmail.com
[core]
    symlinks = false
	#autocrlf = true
    whitespace = cr-at-eol,-trailing-space,-space-before-tab
    filemode = false
	safecrlf = true
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = true
	ui = true
[pack]
    packSizeLimit = 2g
[help]
    format = html
[imap]
    folder = \"[Gmail]/Drafts\"
[alias]
	b = branch -a
	l = log --graph --decorate --oneline 
	ld = log  --graph --decorate --date=local 		   	 --pretty=format:'%Cred%h%Creset%C(yellow bold)%d%Creset %C(white dim)%s%Creset %C(magenta dim)(%cd)%Creset %C(bold blue)<%an>%Creset'
	ldr = log --graph --decorate 			  			 --pretty=format:'%Cred%h%Creset%C(yellow bold)%d%Creset %C(white dim)%s%Creset %C(magenta dim)(%cr)%Creset %C(bold blue)<%an>%Creset'
	lg = log  --graph --decorate --abbrev-commit --color --pretty=format:'%Cred%h%Creset%C(yellow bold)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	cb = checkout -b
	db = branch -d
	ck = checkout
	cm = commit
	s = status --short
	a = add
	sa = stash apply
	sp = stash pop
	sl = stash list
	aa = add -A
	tfe = !git-tfs fetch
	tpu = !git-tfs pull
	rl = rev-list --ancestry-path --first-parent tfs/default..HEAD
[push]
	default = current
[mergetool]
    prompt = false
    keepBackup = false
[github]
	user = jonschoning
