[user]
    name = Jon Schoning
    email = jonschoning@gmail.com
[core]
    symlinks = false
	#autocrlf = true
    whitespace = cr-at-eol,-trailing-space,-space-before-tab
    filemode = false
	safecrlf = true
	pager = less -F -X
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = true
	ui = true
[pack]
    packSizeLimit = 2g
[help]
    format = html
[imap]
    folder = \"[Gmail]/Drafts\"
[alias]
	b = branch -a
	l = log --graph --decorate --oneline                 --pretty=format:'%Cred%h%Creset%C(yellow bold)%d%Creset %C(white dim)%s%Creset'
	ld = log  --graph --decorate --date=local 		   	 --pretty=format:'%Cred%h%Creset%C(yellow bold)%d%Creset %C(white dim)%s%Creset %C(magenta dim)(%cd)%Creset %C(bold blue)<%an>%Creset'
	lg = log  --graph --decorate --abbrev-commit --color --pretty=format:'%Cred%h%Creset%C(yellow bold)%d%Creset %C(white dim)%s%Creset %C(magenta dim)(%cr)%Creset %C(bold blue)<%an>%Creset'
	cb = checkout -b
	db = branch -d
	ck = checkout
	cm = commit
	s = status --short
	a = add
	sa = stash apply
	sp = stash pop
	sl = stash list
	aa = add -A
	rl = rev-list --ancestry-path --first-parent tfs/default..HEAD
[push]
	default = current
[mergetool]
    prompt = false
    keepBackup = false
[github]
	user = jonschoning
[gui]
	fontui = -family \"Gravur Condensed\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Bitstream Vera Sans Mono\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
